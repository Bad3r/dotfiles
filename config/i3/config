for_window  [class="(?i)(?:qt5ct|pinentry)"]           floating enable, focus
for_window  [title="(?i)(?:copying|deleting|moving)"]  floating enable    
for_window  [window_role="(?i)(?:pop-up|setup)"]       floating enable    
