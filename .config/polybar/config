menu-0-0-exec = menu-open-1
menu-0-1 = power off
menu-0-1-exec = menu-open-2

menu-1-0 = cancel
menu-1-0-exec = menu-open-0
menu-1-1 = reboot
menu-1-1-exec = shutdown -r 0

menu-2-0 = power off
menu-2-0-exec = shutdown 0
menu-2-1 = cancel
menu-2-1-exec = menu-open-0

[module/screenshot]
type = custom/text
content = 
content-padding = 1

; "click-(left|middle|right)" will be executed using "/usr/bin/env sh -c $COMMAND"
click-left = rm -f /tmp/copyshot.png && ~/ksnip -r -s && xclip -sel clip -t image/png /tmp/copyshot.png

